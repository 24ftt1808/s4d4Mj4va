import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Random;

public class ModulusQuestion {
    public static void main(String[] args) throws IOException {
        // Create folder Practical 5
        File folder = new File("Practical 5");
        if (!folder.exists()) {
            folder.mkdir();
        }

        
        File file = new File(folder, "Modulus Questions.txt");
        FileWriter writer = new FileWriter(file, true);

        
        Random rand = new Random();
        int num1 = rand.nextInt(100); // random between 0 - 99
        int num2 = rand.nextInt(99) + 1; // random between 1 - 99 (to avoid division by 0)

        
        String question = num1 + " % " + num2 + " = ?\r\n";
        writer.write(question);

        writer.close();

        // Notify user
        System.out.println("A new question added");
    }
}
